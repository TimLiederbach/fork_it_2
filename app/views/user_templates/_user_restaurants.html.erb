<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Restaurants

    <a data-toggle="collapse" href="#user_restaurants_new_form">
      Add restaurant
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/restaurants/<%= restaurant.id %>">
          <%= restaurant.name %>
        </a>

        <a href="/delete_restaurant_from_creator/<%= restaurant.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_restaurants_new_form">
        <%= render partial: "user_templates/user_restaurants_new_form" %>
      </div>
    </div>

  </ul>
</div>
